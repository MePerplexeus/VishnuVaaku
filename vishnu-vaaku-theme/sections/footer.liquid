{% comment %}
  Footer Section - Vishnu Vaaku Theme
  FIX #4: Replaced Search with Instagram, YouTube, Facebook links
{% endcomment %}

<footer class="footer" role="contentinfo">
  <div class="footer__content">
    <div class="footer__brand">
      <a href="{{ routes.root_url }}" class="footer__logo">
        <span class="footer__logo-icon">✧</span>
        <span class="footer__logo-text">{{ section.settings.footer_title | default: shop.name }}</span>
      </a>
      <p class="footer__description">{{ section.settings.footer_description }}</p>
    </div>
    
    <div class="footer__links">
      {% if section.settings.menu_1 != blank %}
        <div class="footer__links-group">
          <h4>{{ section.settings.menu_1_title | default: 'Navigate' }}</h4>
          {% for link in section.settings.menu_1.links %}
            <a href="{{ link.url }}">{{ link.title }}</a>
          {% endfor %}
        </div>
      {% endif %}
      
      <!-- FIX #4: Social links section replacing Search -->
      <div class="footer__links-group">
        <h4>{{ section.settings.social_title | default: 'Connect' }}</h4>
        {% if section.settings.instagram_link != blank %}
          <a href="{{ section.settings.instagram_link }}" target="_blank" rel="noopener" aria-label="Instagram">Instagram</a>
        {% endif %}
        {% if section.settings.youtube_link != blank %}
          <a href="{{ section.settings.youtube_link }}" target="_blank" rel="noopener" aria-label="YouTube">YouTube</a>
        {% endif %}
        {% if section.settings.facebook_link != blank %}
          <a href="{{ section.settings.facebook_link }}" target="_blank" rel="noopener" aria-label="Facebook">Facebook</a>
        {% endif %}
        {% if section.settings.twitter_link != blank %}
          <a href="{{ section.settings.twitter_link }}" target="_blank" rel="noopener" aria-label="Twitter">Twitter</a>
        {% endif %}
      </div>
    </div>
  </div>
  
  <div class="footer__bottom">
    <p class="footer__copyright">
      © {{ 'now' | date: '%Y' }} {{ shop.name }} • {{ section.settings.copyright_text | default: 'Crafted with cosmic intention' }}
    </p>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "class": "section-footer",
  "settings": [
    {
      "type": "text",
      "id": "footer_title",
      "label": "Footer title",
      "default": "VISHNU VAAKU"
    },
    {
      "type": "textarea",
      "id": "footer_description",
      "label": "Footer description",
      "default": "Illuminating paths through the ancient science of Vedic astrology."
    },
    {
      "type": "header",
      "content": "Navigation Menu"
    },
    {
      "type": "text",
      "id": "menu_1_title",
      "label": "Menu title",
      "default": "Navigate"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "header",
      "content": "Social Links"
    },
    {
      "type": "text",
      "id": "social_title",
      "label": "Social section title",
      "default": "Connect"
    },
    {
      "type": "url",
      "id": "instagram_link",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "youtube_link",
      "label": "YouTube URL"
    },
    {
      "type": "url",
      "id": "facebook_link",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "twitter_link",
      "label": "Twitter URL"
    },
    {
      "type": "header",
      "content": "Copyright"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright text",
      "default": "Crafted with cosmic intention"
    }
  ]
}
{% endschema %}
